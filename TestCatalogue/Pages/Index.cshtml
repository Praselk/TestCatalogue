@page
@model IndexModel
@{
    ViewData["Title"] = "Список сотрудников";
}

<h1>Список сотрудников</h1>

<p>
    <a asp-page="add">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LanguageId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.GetDepartment(item.DepartmentId).DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.GetLanguage(item.LanguageId).LanguageName)
                </td>
                <td>
                    <p><a asp-page="./Edit" asp-route-id="@item.Id">Изменить</a></p>
                    <p><a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a></p>
                </td>
            </tr>
        }
    </tbody>
</table>
