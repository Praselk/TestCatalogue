@page
@model TestCatalogue.Pages.EditLangModel
@{
    ViewData["Title"] = "Редактировать язык программирования";
}

<h1>Редактировать язык программирования</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LanguageModel.LanguageName" class="control-label"></label>
                <input asp-for="LanguageModel.LanguageName" class="form-control" />
                <span asp-validation-for="LanguageModel.LanguageName" class="text-danger"></span>
            </div>     
            <div class="form-group center-aligned">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-page="Languages" class="link-primary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
